* {
    margin: 0;
    padding: 0;
}

.dialog-screen {
    display: flex;
    width: 100%;
    height: 100%;
    align-items: center;
    justify-content: flex-end;
    padding: 20px;
}

.dialog-box {
    max-width: 75%;
    background-color: #325ea8;
    color: #ffffff;
    padding: 20px;
    border-width: 3px;
    border-color: #ffffff;
    border-style: solid;
}

.dialog-text {
    line-height: 1.4;
    font-size: 12px;
}
